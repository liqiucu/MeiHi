@model MeiHi.Admin.Models.Service.ShowServiceModel

@{
    ViewBag.Title = "ShowServicesByShopId";
}

<h2>ShopId:@Model.ShopId</h2>

<p>
    @Html.ActionLink("Create New", "CreateService", new { shopId = Model.ShopId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("服务ID")
        </th>
        <th>
            @Html.DisplayName("服务类型")
        </th>
        <th>
            @Html.DisplayName("服务标题")
        </th>
        <th>
            @Html.DisplayName("美嗨价")
        </th>
        <th>
            @Html.DisplayName("原价")
        </th>
        <th>
           @Html.DisplayName("是否支持随时退款")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ShowServiceList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CMUnitCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginalUnitCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IfSupportRealTimeRefund)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditService", new { serviceId = item.ServiceId }) |
                @Html.ActionLink("Details", "ServiceDetail", new { serviceId = item.ServiceId }) |
                @Html.ActionLink("Delete", "DeleteService", new { serviceId = item.ServiceId })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Back to List", "ShopManege")
</p>

